<div class="card card-body bg-light">
  <h2 class="page-header">Manage users
    <%= link_to "Add new User", new_admin_user_path, class: "btn btn-success" %>
  </h2>
  <% if @users.exists? %>
    <table class="table table-striped">
      <tr>
        <th>User name</th>
        <th>User email</th>
        <th>Date created</th>
        <th>Actions</th>
      </tr>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td><%= user.created_at.to_date %></td>
          <td>
            <%= link_to "Edit", edit_admin_user_path(user), class: "btn btn-primary" %>
            <%= link_to "Delete", admin_user_path(user), class: "btn btn-danger", method: :delete, data: {confirm: "Are you sure?"} %>
          </td>
        </tr>
      <% end %>
    </table>
    <div class="digg_pagination">
      <%= will_paginate @posts %>
    </div>
  <% else %>
    <p>There are no users to show.</p>
  <% end %>
</div>
