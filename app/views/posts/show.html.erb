<div class="card post-single">
  <div class="card-body">
    <h2 class="page-header">
      <%= @post.title %>
    </h2>
    <small>
      Posted by <%= @post.user.name %> on <%= @post.created_at.to_date %>
    </small>
    <%= image_tag @post.image.url, width: "100%" %>
    <%= @post.body %>
  </div>
</div>

<%= render "partials/comments" %>
